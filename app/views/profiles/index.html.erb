<!-- Daily Food Diary - selects MEAL by TIME and will be moved to the search page later -->

          <h2 class="sub-header">Daily Food Diary</h2>
         <%= form_for [@meal] do |f| %>
           <% if @meal.errors.any? %>
            <div id="error_explanation">
             <h2><%= pluralize(@meal.errors.count, "error") %> prohibited this meal from being saved:</h2>

              <ul>
              <% @meal.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              </ul>
            </div>
              <% end %>
              <% end %>

              <%= f.label "Select a recipe" %>
              <%= f.select(:recipe_id, @recipe_options,{ include_blank: true }) %>
             
              <%= f.label "Select an item" %>
              <%= f.select(:item_id, @item_options,{ include_blank: true }) %>
              
              <%= f.label "Select a time" %>
              <%= f.datetime_local_field :time_eaten  %>
              <%= f.submit "Save meal" %>
              <% end %>


<!-- Datatable for ALL meal display -->
        <div class="container">

          <h2><%= link_to "<", root_path(:@date_from => Time.new.beginning_of_day.to_i-1.day, :@date_til => Time.new.end_of_day.to_i-1.day), :class => "ui-button" %></h2>

          <h2><%= link_to "TODAY", root_path(:@date_from => Time.new.beginning_of_day.to_i, :@date_til => Time.new.end_of_day.to_i), :class => "ui-button" %></h2>

          <h2><%= link_to ">", root_path(:@date_from => Time.new.beginning_of_day.to_i+1.day, :@date_til => Time.new.end_of_day.to_i+1.day), :class => "ui-button" %></h2>


